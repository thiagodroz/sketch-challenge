{
  "name": "sketch-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn generate && react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "yarn test -- --coverage --watchAll=false && open ./coverage/lcov-report/index.html",
    "eject": "react-scripts eject",
    "lint:js": "eslint",
    "lint:format": "prettier --write \"./src/**/*.{ts,tsx,js,json,md}\"",
    "precommit": "lint-staged",
    "generate": "graphql-codegen -r dotenv/config",
    "prestart": "yarn generate",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "graphql": "^16.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.5",
    "@storybook/addon-actions": "^6.4.19",
    "@storybook/addon-essentials": "^6.4.19",
    "@storybook/addon-interactions": "^6.4.19",
    "@storybook/addon-links": "^6.4.19",
    "@storybook/builder-webpack5": "^6.4.19",
    "@storybook/manager-webpack5": "^6.4.19",
    "@storybook/node-logger": "^6.4.19",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "^6.4.19",
    "@storybook/testing-library": "^0.0.9",
    "@types/styled-components": "^5.1.23",
    "dotenv": "^16.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "webpack": "^5.69.1"
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/src/**/index.ts",
      "!<rootDir>/src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/graphql/",
      "<rootDir>/src/styles/",
      "<rootDir>/src/types.ts",
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/components/App.ts"
    ]
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn lint:format",
      "yarn lint:js"
    ],
    "**/*.{js,json,css,md}": [
      "yarn lint:format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
